$orange-d2 = #fb8c00
$green-d1 = #43A047

.post-card
  margin: 10px 10px 0 0
  width: 300px
  height: 150px
  flex-shrink: 0

.post-card-container
  display: flex
  flex-wrap: wrap

.post-triple-orange
  background-color: $orange-d2

.post-triple-green
  background-color: $green-d1

.post-double-orange
  @media only screen and (max-width: 1410px) and (min-width: 790px)
    background-color: $orange-d2

.post-double-green
  @media only screen and (max-width: 1410px) and (min-width: 790px)
    background-color: $green-d1

.blog-section
  p, li
    font-size: 1.5em
  h5
    margin: 20px 0
    font-size: 1.8em
    font-weight: bold
  h1
    border-bottom: 5px solid $orange-d2
  h4
    margin-top: 40px
    font-size: 3em
    color: $green-d1
  a
    color: $orange-d2
    font-weight: bold
    &:hover
      text-decoration: underline
  ul
    padding-left: 20px
    li
      list-style-type: square
      margin-top: 5px
      margin-bottom: 5px
