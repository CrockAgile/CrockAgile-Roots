body
  display: flex
  min-height: 100vh
  flex-direction: column

main
  flex: 1 0 auto

footer.page-footer
  i
    margin: 0 0.3em 0.3em 0
  .row
    margin-bottom: 0

header
  object
    pointer-events: none
  margin-bottom: 25px

#logo-svg
  height: 86px
  position: relative
  left: 50px
  @media only screen and (max-width: 600px)
    height: 74px
    left: 0px

#logo-agile
  @media only screen and (max-width: 750px)
    display: none

#profile
  border: 5px solid #43A047

.nav-wrapper.container
  @media only screen and (min-width: 993px)
    padding: 0
