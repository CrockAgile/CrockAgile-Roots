body
  display: flex
  min-height: 100vh
  flex-direction: column

main
  flex: 1 0 auto

footer.page-footer
  .row
    margin-bottom: 0

#bio
  font-size: 1.5em
  strong
    text-decoration: underline
    font-size: 1.1em

.logo-svg
  height: 85px
  position: relative
  @media only screen and (max-width: 600px)
    height: 74px
  @media only screen and (min-width: 993px)
    left: 120px

#logo-small
  display: none
  @media only screen and (max-width: 680px)
    display: inline
#logo-large
  @media only screen and (max-width: 680px)
    display: none
#prof
  .card-title
    top: 0
#contacts
  border-radius: 20px
  .collection-item
    transition: padding-left 0.3s ease-in
    &:hover
      padding-left: 20%

#enjoyments
  .tab a
    color: #43a047
    font-weight: bold
  .indicator
    background-color: #ff9800
.enjoyment
  min-height: 520px
#podcasts
  display: flex
  flex-wrap: wrap
  align-content: center
  img
    height: 144px
    padding: 10px
.flex
  img
    margin: 15px 15px 0 15px
    height: 90px
    flex-shrink: 0
  display: flex
  flex-wrap: wrap
  flow-direction: column
  align-items: center
  justify-content: space-around

.nav-wrapper.container
  li.active
    a
      color: #FF9800

i
  margin: 0 0.3em 0.3em 0

.post-card
  margin: 10px 10px 0 0
  width: 300px
  height: 150px
  flex-shrink: 0

.post-card-container
  display: flex
  flex-wrap: wrap

.post-triple-orange
  background-color: #fb8c00 // orange darken 2

.post-triple-green
  background-color: #43a047 // green darken 1

.post-double-orange
  @media only screen and (max-width: 1410px) and (min-width: 790px)
    background-color: #fb8c00 // orange darken 2

.post-double-green
  @media only screen and (max-width: 1410px) and (min-width: 790px)
    background-color: #43a047 // green darken 1
